<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp" >

    <ImageView
        android:id="@+id/track_image"
        android:layout_width="80dp"
        android:layout_height="64dp"
        android:paddingRight="16dp" />

    <TextView
        android:id="@+id/track_title"
        android:layout_toRightOf="@+id/track_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/track_author"
        android:layout_below="@+id/track_title"
        android:layout_toRightOf="@+id/track_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/track_state"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/state_default" />

    <TextView
        android:id="@+id/track_votes"
        android:layout_toLeftOf="@+id/track_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/track_adder_image"
        android:layout_width="24dp"
        android:layout_height="32dp"
        android:layout_marginRight="8dp"
        android:paddingBottom="8dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true" />

    <TextView
        android:id="@+id/track_adder_name"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@+id/track_adder_image"
        android:layout_alignParentBottom="true" />

</RelativeLayout>